<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Leafy" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/launcher_foreground_color</item>
        <item name="android:windowBackground">@color/launcher_background_color</item>
    </style>

    <style name="Theme.Splash" parent="Theme.SplashScreen">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:statusBarColor">@color/launcher_foreground_color</item>
        <item name="windowSplashScreenBackground">@color/launcher_background_color</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.Leafy</item>
    </style>
</resources>